{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Run Hot Reload",
      "type": "shell",
      "command": "python",
      "args": ["build.py", "-hot-reload", "-run"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "custom",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^\\s*(.+)\\(([0-9]+):([0-9]+)\\) (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "osx": {
        "command": "python3"
      }
    },
    {
      "label": "Build Hot Reload",
